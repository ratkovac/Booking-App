<Page x:Class="BookingApp.View.Driver.Pages.StartingPricePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Driver.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="StartingPricePage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Starting Price: " HorizontalAlignment="Center" FontSize="17" Margin="20 20 20 20"/>
            <TextBox x:Name="txtStartingPrice" FontSize="16" Padding="10" Margin="50 0 50 0" Width="200"/>
            <Button x:Name="btnConfirm" Content="Confirm" FontSize="16" Padding="10" Margin="50 0 50 0" Click="btnConfirm_Click" />
        </StackPanel>
    </Grid>
</Page>
