      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Driver.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="MinutesLatePage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Unesite broj minuta koliko kasnite:" FontSize="17" Margin="20 20 0 20"/>
            <TextBox x:Name="MinutesLateTextBox" FontSize="16" Padding="10" Margin="50 0 50 0" Width="200"/>
            <Button Content="Confirm" FontSize="16" Padding="10" Margin="50 0 50 0" Click="btnConfirmation_Click"/>
        </StackPanel>
    </Grid>
</Page>