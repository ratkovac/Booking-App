<Window x:Class="BookingApp.View.Driver.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NotificationWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <ListBox Name="NotificationList" SelectionChanged="NotificationList_SelectionChanged" Width="200" Height="414"/>
            <!--<Button Content="Dodaj Notifikaciju" Click="AddNotification_Click" Margin="0 10"/>
            <Button Content="Ukloni Notifikaciju" Click="RemoveNotification_Click"/> -->
        </StackPanel>

        <!-- Right Panel: Message Display -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Message Display -->
            <TextBox Name="MessageDisplay" IsReadOnly="True" FontSize="23" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="75">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </StackPanel>
    </Grid>
</Window>
