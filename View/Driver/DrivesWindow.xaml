<Window x:Class="BookingApp.View.Driver.DrivesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DrivesWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding ListDrive}" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Tourist Name" Binding="{Binding Guest.Username}" />
            <DataGridTextColumn Header="Start City" Binding="{Binding StartAddress.Location.City}" />
            <DataGridTextColumn Header="Start Country" Binding="{Binding StartAddress.Location.Country}" />
            <DataGridTextColumn Header="Start Street" Binding="{Binding StartAddress.Street}" />
            <DataGridTextColumn Header="Start Number" Binding="{Binding StartAddress.Number}" />
            <DataGridTextColumn Header="End City" Binding="{Binding EndAddress.Location.City}" />
            <DataGridTextColumn Header="End Country" Binding="{Binding EndAddress.Location.Country}" />
            <DataGridTextColumn Header="End Street" Binding="{Binding EndAddress.Street}" />
            <DataGridTextColumn Header="End Number" Binding="{Binding EndAddress.Number}" />
            <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
        </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnDriveReservation" Content="Open Drive Reservation" Click="btnDriveReservation_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <Grid Background="#80000000" Visibility="{Binding IsOverlayVisible, Converter={StaticResource BoolToVisibilityConverter}}">
        </Grid>
    </Grid>
</Window>