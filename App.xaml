                                    <TextBlock Text="{Binding Type}"
                                               Padding="2" Background="Transparent"
                                               FontSize="15"
                                               VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,5,0">
